[user]
  username = ggteixeira
	name = Guilherme Teixeira
  email = 24235344+ggteixeira@users.noreply.github.com
  signingKey = ~/.ssh/personal

[includeIf "gitdir:~/Work/"]
  path = ~/.gitconfig-work

[gpg]
  format = ssh

[commit]
  gpgsign = true

[core]
	editor = nvim

[tag]
	forceSignAnnotated = false

[pull]
	rebase = false

[init]
	defaultBranch = main

[push]
	default = current

[alias]
	l = "log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
	st = status
	com = commit
	diffcom = git diff HEAD~1
	git = !git
  unstage = restore --staged
  adp = add -p

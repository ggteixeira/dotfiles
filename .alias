alias updateall='\
  \echo "UPDATE #####################################################" && 
  \sudo apt update -y && 

  \echo "UPGRADE #####################################################" && 
  \sudo apt upgrade -y && 

  \echo "AUTOREMOVE #####################################################" && 
  \sudo apt autoremove -y && 

  \echo "AUTOCLEAN #####################################################" && 
  \sudo apt autoclean -y && 

  \echo "CLEAN #####################################################" && 
  \sudo apt clean -y && 

  \echo "SNAP REFRESH #####################################################" && 
  \sudo snap refresh && 

  \echo "FLATPAK UPDATE #####################################################" && 
  \flatpak update -y'

